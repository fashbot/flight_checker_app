<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_weight="1">

    <ImageView android:layout_width="4dp"
               android:id="@+id/round_trip_from_selector_divider"
               android:layout_height="match_parent"
               android:layout_marginLeft="30dp"
               app:layout_constraintStart_toStartOf="parent"
               android:background="@color/mainActivityBackgroundColor"/>


    <TextView
            android:id="@+id/round_trip_from_selector_text"
            android:layout_width="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/round_trip_from_selector_divider"
            android:text="From:"/>

    <Spinner
            android:id="@+id/round_trip_from_spinner"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/round_trip_from_selector_text"
            app:layout_constraintStart_toEndOf="@id/round_trip_from_selector_divider"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ic_spinner_background"
            android:layout_height="45dp"/>

    <TextView
            android:id="@+id/round_trip_to_selector_text"
            android:layout_width="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/round_trip_from_spinner"
            app:layout_constraintStart_toEndOf="@id/round_trip_from_selector_divider"
            android:text="To:"/>

    <Spinner
            android:id="@+id/round_trip_to_spinner"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_spinner_background"
            app:layout_constraintTop_toBottomOf="@id/round_trip_to_selector_text"
            app:layout_constraintStart_toEndOf="@id/round_trip_from_selector_divider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="45dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/round_trip_to_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_submit_button_background"
            android:id="@+id/round_trip_search_submit"
            android:text="Go"/>


</android.support.constraint.ConstraintLayout>